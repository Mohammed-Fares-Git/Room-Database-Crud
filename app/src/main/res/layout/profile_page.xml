<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.client.ProfilePage"
    android:background="@color/white"
    >


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/log_out_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/auth_btn_bg"
        android:textColor="@color/auth_form_text_color"
        android:text="@string/logout"
        android:textAllCaps="false"
        android:drawableStart="@drawable/logout_ic"
        android:padding="10dp"
        android:drawablePadding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/image_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="100dp"
        android:layout_margin="10dp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/log_out_btn">

        <ImageView
            android:id="@+id/client_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/main_bg"
            android:scaleType="centerCrop"
            />

    </androidx.cardview.widget.CardView>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/client_name"
        android:text="Client Name"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/image_wrapper"
        app:layout_constraintStart_toStartOf="@id/image_wrapper"
        app:layout_constraintEnd_toEndOf="@id/image_wrapper"/>

    <View
        android:id="@+id/firs_hr"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#777"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/client_name"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firs_hr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/my_orders"
                android:paddingHorizontal="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:drawableStart="@drawable/inventory_ic"
                    android:drawablePadding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orders"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="25sp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="50dp"
                    app:cardBackgroundColor="#FF1A00">
                    <TextView
                        android:id="@+id/orders_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="16dp"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#777"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/image_wrapper"
                app:layout_constraintStart_toStartOf="parent"/>


            <LinearLayout
                android:id="@+id/my_cart"
                android:paddingHorizontal="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:drawableStart="@drawable/shopping_cart_ic"
                    android:drawablePadding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cart_title"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="25sp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="50dp"
                    app:cardBackgroundColor="#FF1A00">
                    <TextView
                        android:id="@+id/cart_items_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="16dp"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#777"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/image_wrapper"
                app:layout_constraintStart_toStartOf="parent"/>

            <LinearLayout
                android:id="@+id/my_favorites"
                android:paddingHorizontal="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:drawableStart="@drawable/favorite_ic"
                    android:drawablePadding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/favorite_title"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="25sp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="50dp"
                    app:cardBackgroundColor="#FF1A00">
                    <TextView
                        android:id="@+id/likes_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="16dp"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#777"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/image_wrapper"
                app:layout_constraintStart_toStartOf="parent"/>

