<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/transparent"
    android:theme="@style/AdminThem"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@android:color/transparent"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="9dp"
        app:cardElevation="8dp"
        android:layout_marginBottom="10dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/product_image"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/main_bg"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:id="@+id/is_liked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/favorite_ic"
                android:layout_alignEnd="@id/product_image"
                android:layout_alignTop="@id/product_image"
                android:layout_margin="10dp"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product_name"
        android:textSize="20sp"
        android:textColor="#777"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textColor="#000"
        android:textStyle="bold"
        />

    <TextView
        android:visibility="gone"
        android:id="@+id/product_sold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25%"
        android:textSize="20sp"
        android:textColor="#D60707"
        android:textStyle="italic"
        />

    <TextView
        android:visibility="gone"
        android:id="@+id/product_delevry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/free_delivery"
        android:drawableStart="@drawable/baseline_local_shipping_24"
        android:textSize="15sp"
        android:drawablePadding="10dp"
        android:textColor="#448C30"
        android:textStyle="italic"
        />




</LinearLayout>